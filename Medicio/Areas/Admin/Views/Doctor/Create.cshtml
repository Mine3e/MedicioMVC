﻿﻿﻿@using Core.Models
@model Doctor
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">

            <div class="mb-3 col-md-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>

            <div class="mb-3 col-md-3">
                <label asp-for="ImageFile" class="form-label">ImageUrl</label>
                <input asp-for="ImageFile" class="form-control">
                <span asp-validation-for="ImageFile" style="color:red"></span>
            </div>
        </div>
        <div class="row">

            <div class="mb-3 col-md-9">
                <label asp-for="Description" class="form-label">Description</label>
                <input class="form-control" asp-for="Description">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>