@using Medicio.DTOs.AccountDto
@{
    Layout = null;
}
@model RegisterDto
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/AdminStatic/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/AdminStatic/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <form asp-action="Register" method="post">
                                <div class="login-form">
                                    <h4 class="login-title">Register</h4>
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" placeholder="Name" />
                                            <span asp-validation-for="Name" style="color:red"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Surname">Surname</label>
                                            <input asp-for="Surname" placeholder="Surname" />
                                            <span asp-validation-for="Surname" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        <div class="col-12">
                                            <label asp-for="Username">Username</label>
                                            <input asp-for="Username" placeholder="Username" />
                                            <span asp-validation-for="Username" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        <div class="col-12">
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email" placeholder="Email" />
                                            <span asp-validation-for="Email" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label asp-for="Password">Password</label>
                                            <input asp-for="Password" placeholder="Password" />
                                            <span asp-validation-for="Password" style="color:red"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                            <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
                                            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div asp-validation-summary=All>
                                    </div>
                                    <div class="col-12">
                                        <button class="collapse-item" type="submit">Register account</button>
                                    </div>
                                </div>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminStatic/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminStatic/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/AdminStatic/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/AdminStatic/js/sb-admin-2.min.js"></script>

</body>

</html>